import java.util.ArrayList;

public class ArrayListMethodsInDepth {

	public static void main(String[] args) {
		ArrayList <String> foods = new ArrayList<String>();
		
		foods.add("Apple");
		foods.add("Bread");
		foods.add("Cookies");
		System.out.println(foods.size());
		
		//this prints "true". This method adds "Dole Whip" into the list, 
		//specifically at the end.
		System.out.println(foods.add("Dole Whip"));
		System.out.println(foods.size());
		
		//this prints "Bread". This method replaces "Bread" with "Butter" but 
		//prints the word that was replaced. 
		System.out.println(foods.set(1, "Butter"));
		System.out.println(foods.size());

		//this prints "Cookies". This method removes "Cookies" from the list
		//and prints out the word that was removed.
		System.out.println(foods.remove(2));
		System.out.println(foods.size());
		
		
	}

}
